{{#liquid-bind allProjects use="fade" as |projects|}}
	{{project-banner model=model}}
	<div class="project-contents">
		{{#each model.contents as |content|}}
			{{#if content.isHeader}}
				{{project-header model=content.content}}
			{{/if}}
			{{#if content.isBody}}
				{{project-body model=content.content}}
			{{/if}}
			{{#if content.isImage}}
				{{project-image model=content}}
			{{/if}}
			{{#if content.isComponent}}
				{{project-component model=content}}
			{{/if}}
		{{/each}}
	</div>
	{{secondary-nav model=projects}}
{{/liquid-bind}}
