<section class=content-section>
	<div class="row">
		<div class="columns medium-5 portfolio-item-text-container">
			<h3 class="small-title">{{model.name}}</h3>
			<h2 class="portfolio-item-subtitle">{{model.thumbnailSubtitle}}</h2>
			<div class="portfolio-item-description">{{model.description}}</div>
			<div class="view-link">
				{{#link-to "project" model.id}}
					<span>view</span>
					{{svg-arrow}}
				{{/link-to}}
			</div>
		</div>
		<div class="columns medium-7 portfolio-item-image-container">
			<img class="{{model.name}}" src="{{model.thumbnailImage}}">
		</div>
	</div>
</section>
